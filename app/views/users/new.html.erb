<h1>Sign Up</h1>

<%= form_for @user do |f| %> 

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
    <br>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.label :technician, "Check box if you are a Technician" %>
    <%= f.check_box :technician, class: "form-check-input" %>
    <br>
    <%= f.submit %>
    <br>
<% end %> 
    