<h1>Sign Up</h1>

<%= form_for @user do |f| %> 
    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %>
        prohibited this post from being saved:
      </h2>
   
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    
    <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
    </div>

    <div class = "field">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
    </div>

    
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.label "Check box if you are a Technician" %>
    <%= f.check_box :technician %>
    <br>
    <%= f.submit %>
    <br>
<% end %> 
    