<h1>Edit <%= @user.name %></h1>
<%=  form_for @user do |f| %> 
    <%= render partial: "layouts/errors", locals: {object: @user} %>

    <%= f.label :name %>
    <%= f.text_field :name %> 

    <%= f.label :email %>
    <%= f.text_field :email %> 

    <%= f.label :phone_number %>
    <%= f.text_field :phone_number%> 




    <%= f.submit %> 

<% end %> 
